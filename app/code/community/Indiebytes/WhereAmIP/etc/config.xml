<?xml version="1.0"?>
<config>
    <modules>
        <Indiebytes_WhereAmIP>
            <version>0.1.0</version>
        </Indiebytes_WhereAmIP>
    </modules>
    <global>
        <helpers>
            <whereamip>
                <class>Indiebytes_WhereAmIP_Helper</class>
            </whereamip>
        </helpers>
        <events>
            <controller_front_init_before>
                <observers>
                    <indiebytes_whereamip_frontcontrollerobserver>
                        <type>singleton</type>
                        <class>Indiebytes_WhereAmIP_Model_FrontControllerObserver</class>
                        <method>getCountryCode</method>
                    </indiebytes_whereamip_frontcontrollerobserver>
                </observers>
            </controller_front_init_before>
        </events>
    </global>
    <frontend>
        <routers>
            <whereamip>
                <use>standard</use>
                <args>
                    <module>Indiebytes_WhereAmIP</module>
                    <frontName>change-country</frontName>
                </args>
            </whereamip>
        </routers>
        <layout>
            <updates>
                <whereamip>
                    <file>whereamip.xml</file>
                </whereamip>
            </updates>
        </layout>
    </frontend>
</config>
